<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/backgroundColor"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="miles.identigate.soja.UserInterface.RecordDriveIn"
    tools:showIn="@layout/activity_record_drive_in">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/nameLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="vertical"
            android:visibility="gone">


            <miles.identigate.soja.font.OpenSansBold
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5.0dip"
                android:text="First Name"
                android:textColor="?attr/textColor"
                android:textSize="16sp" />

            <miles.identigate.soja.font.EditTextRegular
                android:id="@+id/txt_first_name"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="10dp"
                android:background="@drawable/border"
                android:hint="Enter First Name"
                android:inputType="text"
                android:padding="10dp"
                android:singleLine="true"
                android:textColor="?attr/textColor"
                android:textColorHint="?attr/textColorHint"
                android:textCursorDrawable="@null" />

            <miles.identigate.soja.font.OpenSansBold
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5.0dip"
                android:text="Last Name"
                android:textColor="?attr/textColor"
                android:textSize="16sp" />

            <miles.identigate.soja.font.EditTextRegular
                android:id="@+id/txt_last_name"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/border"
                android:hint="Enter Last Name"
                android:inputType="text"
                android:padding="10dp"
                android:singleLine="true"
                android:textColor="?attr/textColor"
                android:textColorHint="?attr/textColorHint"
                android:textCursorDrawable="@null" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/idLayout"
            android:visibility="gone"
            android:layout_below="@id/nameLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="vertical">


            <miles.identigate.soja.font.OpenSansBold
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5.0dip"
                android:text="ID"
                android:textColor="?attr/textColor"
                android:textSize="16sp" />

            <miles.identigate.soja.font.EditTextRegular
                android:id="@+id/txtID"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/border"
                android:hint="Enter ID (07123123)"
                android:inputType="text"
                android:padding="10dp"
                android:singleLine="true"
                android:textColor="?attr/textColor"
                android:textColorHint="?attr/textColorHint"
                android:textCursorDrawable="@null" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/genderLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="vertical"
            android:visibility="gone">


            <miles.identigate.soja.font.OpenSansBold
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5.0dip"
                android:text="Gender"
                android:textColor="?attr/textColor"
                android:textSize="16sp" />

            <Spinner
                android:id="@+id/gender_type"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/border" />

        </LinearLayout>



        <LinearLayout
            android:id="@+id/iprn_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <miles.identigate.soja.font.OpenSansBold
                android:id="@+id/typeLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5.0dip"
                android:text="VISITOR TYPE"
                android:textColor="?attr/textColor"
                android:textSize="16sp" />

            <Spinner
                android:id="@+id/visitor_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@drawable/border">

            </Spinner>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <miles.identigate.soja.font.OpenSansBold
                android:id="@+id/hostLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5.0dip"
                android:text="DESTINATION"
                android:textColor="?attr/textColor"
                android:textSize="16sp" />

            <miles.identigate.soja.font.OpenSansBold
                android:id="@+id/spinnerDestination"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="20dp"
                android:background="@drawable/border_grey"
                android:ems="10"
                android:hint="Select Destination"
                android:inputType="text"
                android:padding="15dp"
                android:singleLine="false"
                android:text=""
                android:textColor="?attr/textColor"
                android:textColorHint="?attr/textColorHint"
                android:textCursorDrawable="@null" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/hostLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:visibility="gone">

            <miles.identigate.soja.font.OpenSansBold
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5.0dip"
                android:text="HOST"
                android:textSize="16sp" />

            <miles.identigate.soja.font.OpenSansBold
                android:id="@+id/spinnerHost"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="20dp"
                android:background="@drawable/border_grey"
                android:ems="10"
                android:hint="Select Premise Host"
                android:inputType="text"
                android:padding="15dp"
                android:singleLine="false"
                android:textColor="@android:color/black"
                android:textCursorDrawable="@null" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/car_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:paddingBottom="10dp">

                <miles.identigate.soja.font.OpenSansBold
                    android:id="@+id/carLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10.0dip"
                    android:text="ENTER CAR NUMBER"
                    android:textColor="?attr/textColor"
                    android:textSize="16sp" />

                <miles.identigate.soja.font.EditTextRegular
                    android:id="@+id/car_number"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/border"
                    android:ems="10"
                    android:hint="CAR NUMBER"
                    android:inputType="textCapCharacters"
                    android:padding="10dp"
                    android:singleLine="true"
                    android:text=""
                    android:textColor="?attr/textColor"
                    android:textColorHint="?attr/textColorHint"
                    android:textCursorDrawable="@null" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <miles.identigate.soja.font.OpenSansBold
                    android:id="@+id/numberOfPeopleLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5.0dip"
                    android:text="Number of People in car"
                    android:textColor="?attr/textColor"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/numberOfPeople"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/border"
                    android:ems="10"
                    android:hint="Enter number of people"
                    android:inputType="number"
                    android:padding="10dp"
                    android:singleLine="true"
                    android:text=""
                    android:textColor="?attr/textColor"
                    android:textColorHint="?attr/textColorHint"
                    android:textCursorDrawable="@null" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/phoneNumberLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <miles.identigate.soja.font.OpenSansBold
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5.0dip"
                    android:text="Enter the Phone Number"
                    android:textColor="?attr/textColor"
                    android:textSize="16sp" />

                <miles.identigate.soja.font.EditTextRegular
                    android:id="@+id/phoneNumberEdittext"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/border"
                    android:ems="10"
                    android:hint="Enter phone number (07XX-XXX-XX)"
                    android:inputType="phone"
                    android:maxLength="10"
                    android:padding="10dp"
                    android:singleLine="true"
                    android:text=""
                    android:textColor="?attr/textColor"
                    android:textColorHint="?attr/textColorHint"
                    android:textCursorDrawable="@null" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/companyNameLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <miles.identigate.soja.font.OpenSansBold
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5.0dip"
                    android:text="Enter Company Name"
                    android:textColor="?attr/textColor"
                    android:textSize="16sp" />

                <miles.identigate.soja.font.EditTextRegular
                    android:id="@+id/companyNameEdittext"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/border"
                    android:ems="10"
                    android:hint="Enter company name"
                    android:inputType="text"
                    android:padding="10dp"
                    android:singleLine="true"
                    android:text=""
                    android:textColor="?attr/textColor"
                    android:textColorHint="?attr/textColorHint"
                    android:textCursorDrawable="@null" />
            </LinearLayout>

            <Button
                android:id="@+id/record"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@color/colorPrimary"
                android:text="Check In"
                android:textColor="@android:color/white"
                android:visibility="visible" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>