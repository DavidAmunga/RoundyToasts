<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="miles.identigate.soja.AdminSettingsActivity">

    <include layout="@layout/toolbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_below="@+id/toolbar"
        android:orientation="vertical"
        android:animateLayoutChanges="true"
        android:padding="20dp"
        android:layout_height="match_parent">

        <android.support.v7.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:text="Select Server"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_height="wrap_content" />
        <RadioGroup
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RadioButton android:id="@+id/main"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:checked="true"
                android:text="Main Server: soja.co.ke"
                android:onClick="onRadioButtonClicked"/>
            <RadioButton
                android:id="@+id/custom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Custom Server"
                android:layout_margin="5dp"
                android:onClick="onRadioButtonClicked"/>
            <android.support.v7.widget.AppCompatEditText
                android:layout_width="match_parent"
                android:id="@+id/custom_ip"
                android:maxLines="1"
                android:visibility="visible"
                android:layout_margin="5dp"
                android:text="http://"
                android:layout_height="wrap_content" />
        </RadioGroup>
        <android.support.v7.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:text="Other Settings"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <Switch
                android:id="@+id/printer"
                android:checked="true"
                android:layout_gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Print Visitors Slips"
                android:padding="10dp"
                android:gravity="left"
                />
            <Switch
                android:id="@+id/phone"
                android:checked="true"
                android:layout_gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Record Phone NUmber"
                android:padding="10dp"
                android:gravity="left"
                />
            <Switch
                android:id="@+id/company"
                android:checked="false"
                android:layout_gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Record Company Name"
                android:padding="10dp"
                android:gravity="left"
                />

        </LinearLayout>
        <Button
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            android:textSize="20sp"
            android:text="SET"
            android:textColor="@color/primary_text"
            android:background="@color/colorPrimary"
            android:id="@+id/set"
            />
    </LinearLayout>

</RelativeLayout>
