<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/backgroundColor"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="miles.identigate.soja.UserInterface.RecordWalkIn"
    tools:showIn="@layout/activity_record_walk_in">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/iprn_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <miles.identigate.soja.Font.OpenSansBold
                android:id="@+id/typeLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5.0dip"
                android:text="VISITOR TYPE"
                android:textColor="?attr/textColor"
                android:textSize="16sp" />

            <Spinner
                android:id="@+id/visitor_type"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/border">

            </Spinner>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <miles.identigate.soja.Font.OpenSansBold
                    android:id="@+id/hostLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5.0dip"
                    android:text="DESTINATION"
                    android:textColor="?attr/textColor"
                    android:textSize="16sp" />

                <miles.identigate.soja.Font.OpenSansBold
                    android:id="@+id/spinnerDestination"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/border_grey"
                    android:ems="10"
                    android:hint="Select Destination"
                    android:inputType="text"
                    android:padding="15dp"
                    android:singleLine="false"
                    android:text=""
                    android:textColor="?attr/textColor"
                    android:textColorHint="?attr/textColorHint"
                    android:textCursorDrawable="@null" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/hostLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:visibility="visible">

                <miles.identigate.soja.Font.OpenSansBold
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5.0dip"
                    android:text="HOST"
                    android:textColor="?attr/textColor"
                    android:textSize="16sp" />

                <miles.identigate.soja.Font.OpenSansBold
                    android:id="@+id/spinnerHost"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/border_grey"
                    android:ems="10"
                    android:hint="Select Premise Host"
                    android:inputType="text"
                    android:padding="15dp"
                    android:singleLine="false"
                    android:textColor="?attr/textColor"
                    android:textColorHint="?attr/textColorHint"
                    android:textCursorDrawable="@null" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/phoneNumberLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <miles.identigate.soja.Font.OpenSansBold
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5.0dip"
                    android:textColor="?attr/textColor"
                    android:text="Enter the Phone Number"
                    android:textSize="16sp" />

                <miles.identigate.soja.Font.EditTextRegular
                    android:id="@+id/phoneNumberEdittext"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/border"
                    android:ems="10"
                    android:hint="Enter phone number (07XX-XXX-XX)"
                    android:inputType="phone"
                    android:maxLength="10"
                    android:padding="10dp"
                    android:singleLine="true"
                    android:textColor="?attr/textColor"
                    android:textColorHint="?attr/textColorHint"
                    android:textCursorDrawable="@null" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/companyNameLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <miles.identigate.soja.Font.OpenSansBold
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5.0dip"
                    android:text="Enter Company Name"
                    android:textColor="?attr/textColor"
                    android:textSize="16sp" />

                <miles.identigate.soja.Font.EditTextRegular
                    android:id="@+id/companyNameEdittext"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/border"
                    android:ems="10"
                    android:hint="Enter company name"
                    android:inputType="text"
                    android:padding="10dp"
                    android:singleLine="true"
                    android:text=""
                    android:textColor="?attr/textColor"
                    android:textColorHint="?attr/textColorHint"
                    android:textCursorDrawable="@null" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/car_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iprn_profile"
            android:layout_marginTop="15dp"
            android:orientation="vertical"
            android:visibility="visible">

            <Button
                android:id="@+id/record"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@color/colorPrimary"
                android:text="Check In"
                android:textColor="@android:color/white"
                android:visibility="visible" />
        </LinearLayout>
    </RelativeLayout>
</ScrollView>