<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="false"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".activities.RegisterGuest"
    tools:showIn="@layout/activity_register_guest">


    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/backgroundColor"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context="miles.identigate.soja.UserInterface.RecordWalkIn"
        tools:showIn="@layout/activity_record_walk_in">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <miles.identigate.soja.font.TextViewBold
                    android:id="@+id/typeLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5.0dip"
                    android:text="Visitor Type"
                    android:textColor="?attr/textColor"
                    android:textSize="16sp" />

                <Spinner
                    android:id="@+id/visitor_type"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/border" />

            </LinearLayout>


            <miles.identigate.soja.font.TextViewBold
                android:id="@+id/hostLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5.0dip"
                android:text="Event"
                android:textColor="?attr/textColor"
                android:textSize="16sp" />

            <miles.identigate.soja.font.TextViewBold
                android:id="@+id/spinnerEvent"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="10dp"
                android:background="@drawable/border_grey"
                android:ems="10"
                android:hint="Select Event"
                android:inputType="text"
                android:padding="15dp"
                android:singleLine="false"
                android:text=""
                android:textColor="?attr/textColor"
                android:textColorHint="?attr/textColorHint"
                android:textCursorDrawable="@null" />


            <LinearLayout
                android:id="@+id/nameLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="vertical"
                android:visibility="gone">


                <miles.identigate.soja.font.TextViewBold
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5.0dip"
                    android:text="First Name"
                    android:textColor="?attr/textColor"
                    android:textSize="16sp" />

                <miles.identigate.soja.font.EditTextRegular
                    android:id="@+id/txt_first_name"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/border"
                    android:hint="Enter First Name"
                    android:inputType="text"
                    android:padding="10dp"
                    android:singleLine="true"
                    android:textColor="?attr/textColor"
                    android:textColorHint="?attr/textColorHint"
                    android:textCursorDrawable="@null" />

                <miles.identigate.soja.font.TextViewBold
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5.0dip"
                    android:text="Last Name"
                    android:textColor="?attr/textColor"
                    android:textSize="16sp" />

                <miles.identigate.soja.font.EditTextRegular
                    android:id="@+id/txt_last_name"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/border"
                    android:hint="Enter Last Name"
                    android:inputType="text"
                    android:padding="10dp"
                    android:singleLine="true"
                    android:textColor="?attr/textColor"
                    android:textColorHint="?attr/textColorHint"
                    android:textCursorDrawable="@null" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/genderLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="vertical"
                android:visibility="gone">


                <miles.identigate.soja.font.TextViewBold
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5.0dip"
                    android:text="Gender"
                    android:textColor="?attr/textColor"
                    android:textSize="16sp" />

                <Spinner
                    android:id="@+id/gender_type"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/border" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/countryLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="vertical"
                android:visibility="gone">


                <com.hbb20.CountryCodePicker
                    android:id="@+id/ccp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:ccp_autoDetectCountry="true"
                    app:ccp_showFullName="true"
                    app:ccp_showNameCode="false"
                    app:ccp_showPhoneCode="false" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/documentLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <miles.identigate.soja.font.TextViewBold
                    android:id="@+id/documentLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5.0dip"
                    android:text="Document Type"
                    android:textColor="?attr/textColor"
                    android:textSize="16sp" />

                <Spinner
                    android:id="@+id/document_type"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/border">

                </Spinner>

            </LinearLayout>


            <LinearLayout
                android:id="@+id/phoneNumberLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="vertical">

                <miles.identigate.soja.font.TextViewBold
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5.0dip"
                    android:text="Phone No"
                    android:textColor="?attr/textColor"
                    android:textSize="16sp" />

                <miles.identigate.soja.font.EditTextRegular
                    android:id="@+id/txtPhoneNo"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/border"
                    android:ems="10"
                    android:hint="Enter phone number (07XX-XXX-XX)"
                    android:inputType="phone"
                    android:maxLength="10"
                    android:padding="10dp"
                    android:singleLine="true"
                    android:textColor="?attr/textColor"
                    android:textColorHint="?attr/textColorHint"
                    android:textCursorDrawable="@null" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/designationLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="vertical">


                <miles.identigate.soja.font.TextViewBold
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5.0dip"
                    android:text="Designation"
                    android:textColor="?attr/textColor"
                    android:textSize="16sp" />

                <miles.identigate.soja.font.EditTextRegular
                    android:id="@+id/txt_designation"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/border"
                    android:hint="Enter Designation"
                    android:inputType="text"
                    android:padding="10dp"
                    android:singleLine="true"
                    android:textColor="?attr/textColor"
                    android:textColorHint="?attr/textColorHint"
                    android:textCursorDrawable="@null" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/emailLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="vertical">

                <miles.identigate.soja.font.TextViewBold
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5.0dip"
                    android:text="Email"
                    android:textColor="?attr/textColor"
                    android:textSize="16sp" />

                <miles.identigate.soja.font.EditTextRegular
                    android:id="@+id/txtEmail"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/border"
                    android:hint="Enter Email Address"
                    android:inputType="textEmailAddress"
                    android:padding="10dp"
                    android:singleLine="true"
                    android:textColor="?attr/textColor"
                    android:textColorHint="?attr/textColorHint"
                    android:textCursorDrawable="@null" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/companyNameLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <miles.identigate.soja.font.TextViewBold
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5.0dip"
                    android:text="Company Name"
                    android:textColor="?attr/textColor"
                    android:textSize="16sp" />

                <miles.identigate.soja.font.EditTextRegular
                    android:id="@+id/txtCompany"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/border"
                    android:hint="Enter company name"
                    android:inputType="text"
                    android:padding="10dp"
                    android:singleLine="true"
                    android:text=""
                    android:textColor="?attr/textColor"
                    android:textColorHint="?attr/textColorHint"
                    android:textCursorDrawable="@null" />
            </LinearLayout>

            <Button
                android:id="@+id/record"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="30dp"
                android:background="@color/colorPrimary"
                android:text="Register"
                android:textColor="@android:color/white"
                android:visibility="visible" />

        </LinearLayout>


    </ScrollView>
</android.support.constraint.ConstraintLayout>