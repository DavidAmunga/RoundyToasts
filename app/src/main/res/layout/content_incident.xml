<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_incident"
    tools:context="miles.identigate.soja.UserInterface.Incident">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/app_bar"
            android:gravity="center_horizontal"
            android:padding="20dp"
            android:id="@+id/brand"
            android:orientation="vertical">
            <miles.identigate.soja.Font.OpenSansBold
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:textSize="18sp"
                android:textStyle="bold"
                android:gravity="center_horizontal"
                android:layout_alignParentBottom="true"
                android:text="RECORD AN INCIDENT"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_below="@+id/brand"
            android:layout_height="wrap_content"
            android:id="@+id/iprn_profile"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/brand"
                android:paddingBottom="10dp"
                android:layout_gravity="center"
                android:orientation="vertical">
                <miles.identigate.soja.Font.OpenSansBold
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:id="@+id/visitorTypeLabel"
                    android:layout_marginBottom="10.0dip"
                    android:text="Visitor Type"/>
                <Spinner
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dp"
                    android:id="@+id/visitorType"
                    android:background="@drawable/border"
                    android:layout_height="50dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/brand"
                android:paddingBottom="10dp"
                android:id="@+id/visitorLayout"
                android:layout_gravity="center"
                android:orientation="vertical">
                <miles.identigate.soja.Font.OpenSansBold
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:id="@+id/visitorLabel"
                    android:layout_marginBottom="10.0dip"
                    android:text="Visitor Involved"/>
                <Spinner
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dp"
                    android:id="@+id/visitor"
                    android:background="@drawable/border"
                    android:layout_height="50dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/brand"
                android:paddingBottom="10dp"
                android:layout_gravity="center"
                android:orientation="vertical">
                <miles.identigate.soja.Font.OpenSansBold
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:id="@+id/typeLabel"
                    android:layout_marginBottom="10.0dip"
                    android:text="Incident type"/>
                <Spinner
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dp"
                    android:id="@+id/incident_types"
                    android:background="@drawable/border"
                    android:layout_height="50dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/commentSection"
                android:layout_gravity="center"
                android:layout_below="@+id/modeSection"
                android:orientation="vertical">
                <miles.identigate.soja.Font.OpenSansBold
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:id="@+id/descriptionLabel"
                    android:layout_marginBottom="10.0dip"
                    android:text="Description"/>
                <EditText
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/comment"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:hint="Please describe what happened."
                    android:text=""
                    android:textColor="@android:color/black"
                    android:textCursorDrawable="@null"
                    android:background="@drawable/border"
                    android:ems="10"
                    android:padding="10dp"
                    android:singleLine="false"
                    android:inputType="text" />
            </LinearLayout>
        </LinearLayout>
        <Button
            android:layout_width="match_parent"
            android:layout_below="@+id/iprn_profile"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:id="@+id/record"
            android:background="@color/colorPrimary"
            android:textColor="@android:color/white"
            android:text="RECORD"/>
    </RelativeLayout>
</ScrollView>