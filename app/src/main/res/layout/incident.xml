<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="horizontal">
        <miles.identigate.soja.Font.OpenSansRegular
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight=".5"
            android:id="@+id/name"
            android:text="OBADIAH OBARE" />
        <miles.identigate.soja.Font.OpenSansRegular
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight=".5"
            android:id="@+id/idNumber"
            android:text="ID: 33166582"
            android:textStyle="bold"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="horizontal">
        <miles.identigate.soja.Font.OpenSansRegular
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight=".5"
            android:id="@+id/date"
            android:text="DATE: 16th January,2016"
            />
        <miles.identigate.soja.Font.OpenSansRegular
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight=".5"
            android:id="@+id/type"
            android:text="TYPE: MINOR INJURY" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="vertical">
        <miles.identigate.soja.Font.OpenSansBold
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description"/>
        <miles.identigate.soja.Font.OpenSansLight
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/description"
            />
    </LinearLayout>

</LinearLayout>